// как мы хотим компилировать ts в js
{
  "compilerOptions": {
    "module": "commonjs", // используем систему модулей commonjs
    "declaration": true, // Создавать ли соответствующие файлы ".d.ts"?
    "removeComments": true, // удаляем комментарии
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  }
}
